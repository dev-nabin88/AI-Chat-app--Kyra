<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:padding="5dp"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoimg"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/app_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.405"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/kyratext"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:fontFamily="@font/alegreya_sans_bold"
        android:text="Kyra"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/logoimg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/logoimg"
        app:layout_constraintTop_toTopOf="@+id/logoimg"
        app:layout_constraintVertical_bias="0.466" />


    <ScrollView
        android:id="@+id/sv"
        android:layout_width="320dp"
        android:background="@drawable/scroll_style"
        android:layout_height="450dp"
        android:elevation="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.412">

        <TextView
            android:id="@+id/tvResult"
            android:fontFamily="@font/alegreya_sans_medium"
            android:textColor="@color/black"
            android:padding="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="10dp"
            android:textSize="15sp"
            android:text="answer will appear here...." />
    </ScrollView>

    <EditText
        android:id="@+id/etprompt"
        android:layout_width="320dp"
        android:layout_height="55dp"
        android:elevation="15dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:textSize="15sp"
        android:inputType="text"
        android:background="@drawable/txtfield_style"
        android:hint="ask anything"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingStart="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/sv"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/sv"
        app:layout_constraintTop_toBottomOf="@+id/sv" />

    <ImageButton
        android:id="@+id/sendbutton"
        android:layout_width="50dp"
        android:layout_height="43dp"
        android:elevation="15dp"
        android:layout_marginStart="265dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/etprompt"
        app:layout_constraintStart_toStartOf="@+id/etprompt"
        app:layout_constraintTop_toTopOf="@+id/etprompt"
        app:srcCompat="@drawable/sendbtn" />

    <TextView
        android:id="@+id/foot"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:fontFamily="@font/alegreya_sans_medium"
        android:text="Copyright &#169; 2024 Kyra \n design &amp; developed by ng"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageButton
        android:id="@+id/topleftbar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="56dp"
        android:background="@color/yellow"
        android:src="@drawable/threebar"
        app:layout_constraintEnd_toStartOf="@+id/logoimg"
        app:layout_constraintHorizontal_bias="0.04"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>